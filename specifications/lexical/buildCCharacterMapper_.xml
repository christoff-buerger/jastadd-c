<!-- Ant build script to generate the JastAddC CharacterMapper_'s source code.
     
     @author C. BÃ¼rger
-->

<!-- Targets for working from Eclipse:
       gen			- generates the CharacterMapper_'s java source code
       cleanGen		- removes all generated files
 -->

<project name="JastAddC_CCharacterMapper_" default="gen">
	<path id="_basedir">
		<pathelement location="./../.."/>
	</path>
	<property name="_basedir" refid="_basedir"/>
	
	<target name="gen">
		<taskdef
			classname="JFlex.anttask.JFlexTask"
			name="jflex"
			classpath="${_basedir}/sources/libraries/jflex.jar"
		/>
		<jflex
	    	file="${_basedir}/specifications/lexical/CCharacterMapper_.jflex"
	    	destdir="${_basedir}/implementation"
			nobak="on"
			verbose="on"
	    />
	</target>
	
	<target name="cleanGen">
	    <delete>
			<fileset
				dir="${_basedir}/implementation/jastaddc/symbols/lexicalanalyse"
				includes="CCharacterMapper_.java"
			/>
		</delete>
	</target>
</project>
